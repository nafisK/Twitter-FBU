<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileDetail">

    <include layout="@layout/toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Nafis Khan"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/followers_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userHandle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="followers: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScreenName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="/@nafis_rk" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userHandle"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/followers_text"
        android:text="1000" />

    <TextView
        android:id="@+id/following_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followers_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="following: "
        android:textStyle="bold" />


    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followers_text"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/following_text"
        android:text="1234"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/following_text"
        android:layout_centerHorizontal="true"
        android:text="San Francisco, California"
        android:layout_marginTop="5dp"
        />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_centerHorizontal="true"
            android:text="When an aspiring actress hits it big thanks to a candid Instagram, her life intersects with many other Tokyo women as they follow their dreams"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:autoLink="all"
            android:layout_marginRight="20dp"
            />
</RelativeLayout>